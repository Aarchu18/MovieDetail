@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MovieDetail.Models.Data.MovieViewModel;

<partial name="_MovieDetailPartial" model="Model.MoviesList" />
<html>

<head>
    <meta name="viewport" content="movieList" />
    <title>Movie Details</title>
</head>

<body>
    <form id="FormData" method="post">

        <div>
            Search a Movie by its id:
            <input type="text" asp-for="@Model.MovieId"><br />
        </div>

    </form>

    <div>
        <button type="button" class="btn btn-success" value="Submit" data-attr="submit">Search</button>
    </div>

</body>

</html>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $('[data-attr="submit"]').on('click', function () {
        $.ajax(
            {
                url: "/Movie/Index",
                type: "POST",
                data: $('#FormData').serialize(),
                success: function (response) {
                    console.log(response);
                },
                error: function (err) {
                    console.log(err);
                }
            });
    });

</script>